<!DOCTYPE html>
<html>
  <head>
    <title>Listado de libros</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('../partials/nav.ejs') %>

    <h1>Listado de libros</h1>

    <!-- La imagen está guardada en /public/images -->
    <ul class="lista">
        <% books.forEach(book => { %>
            <li class="lista-item">
                <a href="/libro/<%= book.idLibro %>" class="lista-item_link">
                    <img src="<%= book.portada %>" alt="" class="lista-item_img">
                    <h2 class="lista-item_titulo">
                        <%= book.titulo %>
                    </h2>
                </a>
                <a href="/eliminar/<%= book.idLibro %>">
                  Eliminar libro
                </a>
            </li>
        <% }) %>
    </ul><!-- Acá cierra el ul -->

  </body>
</html>
