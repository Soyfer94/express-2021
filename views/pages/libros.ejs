  <body>
    <%- include('../partials/nav.ejs') %>

    <h1>Listado de libros</h1>
   
    <ul class="lista"> 
        <% books.forEach(book => { %>
           <li class="lista-item">
            <a href="/libro/<%= book.idLibro %>" class="lista-item_link">
                <img src="/images/gatito.jpg" alt="">
               <h2 class="lista-item_titulo"> 
                   <% book.titulo %>
                </h2>
            </a>
        </li>
        <% }) %>
        
    </ul>
       


